{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ex-libris",
  "description": "Un ex-libris ou exlibris (du latin ex libris meis, « faisant partie de mes livres ») est une inscription ou une vignette ajoutée à l'intérieur d'un livre, par laquelle le propriétaire marque nommément sa possession. Version française",
  "type": "object",
  "properties": {
    "description": {
      "description": "Description",
      "type": "string"
    },
    "author_name": {
      "description": "Auteur",
      "type": "string"
    },
    "edition": {
      "description": "Édition",
      "type": "string"
    },
    "number_of_pages": {
      "description": "Nombre de pages",
      "type": "integer"
    },
    "isbn": {
      "description": "ISBN",
      "type": "string"
    },
    "date_created": {
      "description": "Date de création",
      "type": "string",
      "format": "date"
    },
    "digital_assets": {
      "description": "Actifs digitaux",
      "type": "object",
      "properties": {
        "primary_image": {
          "description": "Photo de la première de couverture",
          "type": "string",
          "format": "uuid"
        },
        "secondary_image": {
          "description": "Image unique (dédicasse ou marquage)",
          "type": "string",
          "format": "uuid"
        }
      },
      "required": [
        "primary_image"
      ]
    }
  },
  "required": [
    "author_name",
    "date_created",
    "digital_assets"
  ]
}